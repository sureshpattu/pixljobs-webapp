{{#each data}}
    <a class="card_sec" href="/job-info/{{this.id}}">
        <div class="new_sec">
            <span class="fa fa-certificate"></span>
            <span class="new_txt">NEW</span>
        </div>
        {{#if company.logo}}
            <img src="/api/companies/photo/{{company.logo}}" class="c_logo">
        {{else}}
            <img src="/img/company-temp-logo.png" class="c_logo">
        {{/if}}
        <div class="row">
            <div class="col-md-6">
                <div>
                    <span class="title">{{name}}</span>
                </div>
                <div>
                    <div class="info_sec {{#if company.city}}{{else}}hide{{/if}}">
                        <i class="fa fa-building com_icon"></i>
                        <span class="sub_title com_name">{{company.name}}</span>
                    </div>
                    <div class="info_sec {{#if company.city}}{{else}}hide{{/if}}">
                        <img src="/img/icons/location-dark.svg" alt="" class="icon_marker_sec">
                        <span class="txt_sec city_txt">{{company.city}}</span>
                    </div>
                </div>
                <div class="tags_wrap">
                    {{#each job_technologies}}
                        {{#ifCond @index '<' 3}}
                            <span>{{technology.name}}</span>
                        {{/ifCond}}
                    {{/each}}
                    {{#ifCond job_technologies.length '>' 3}}
                        <span class="more"
                              title="" data-toggle="popover" data-trigger="hover"
                              data-content="{{#each job_technologies}}{{#ifCond @index '>' 2}}{{#if
                                      @last}}{{technology.name}}.{{else}}{{technology.name}}, {{/if}}{{/ifCond}}{{/each}}">
                            + more
                        </span>
                    {{/ifCond}}
                </div>
            </div>
            <div class="col-md-6">
                <div class="cta_wrap">
                    {{#if job_categories}}
                        <div class="btn btn_blue">{{job_categories.0.category.name}}</div>
                    {{/if}}
                </div>
                <div class="job_details_wrap">
                    <div class="info_sec">
                        <i class="fa fa-inr icon_dollar_sec" aria-hidden="true"></i>
                        <span class="txt_sec">
                            {{#ifCond  salary_min '===' 0}}
                                {{#ifCond  salary_max '===' 0}}
                                {{else}}
                                    {{#formatCurrency salary_max}}{{/formatCurrency}}
                                {{/ifCond}}
                            {{else}}
                                {{#formatCurrency salary_min}}{{/formatCurrency}} - {{#formatCurrency
                                    salary_max}}{{/formatCurrency}}
                            {{/ifCond}}
                        </span>
                    </div>
                    <div class="info_sec">
                        <img src="/img/icons/clock.svg" alt="" class="icon_sec">
                        <span class="txt_sec">{{#countDateTime created_at}}{{/countDateTime}}</span>
                    </div>
                </div>
                <div class="job_details_wrap">

                </div>
            </div>
        </div>
    </a>
{{else}}
    <h4 class="text-center text-capitalize">NO DATA FOUND!</h4>
{{/each}}