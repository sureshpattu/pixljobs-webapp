{{#each data}}
    <div class="card_sec new_card">
        <div class="new_sec">
            <span class="fa fa-certificate"></span>
            <span class="new_txt">NEW</span>
        </div>
        <img src="https://via.placeholder.com/36" class="c_logo">
        <div class="row">
            <div class="col-md-6">
                <div>
                    <span class="title">{{name}}</span>
                    <span class="sub_title">{{company.name}}</span>
                </div>
                <div class="tags_wrap">
                    {{#each qa_job_technologies}}
                        <span>{{technology.name}}</span>
                    {{/each}}
                </div>
            </div>
            <div class="col-md-6">
                <div class="cta_wrap">
                    <a class="btn btn_blue">FRONTEND</a>
                </div>
                <div class="job_details_wrap">
                    <div class="info_sec">
                        <img src="/img/icons/clock.svg" alt="" class="icon_sec">
                        <span class="txt_sec">{{#countDateTime created_at}}{{/countDateTime}}</span>
                    </div>
                    <div class="info_sec">
                        <span class="txt_sec">
                            {{salary_min}} â€” {{salary_max}}
                            <img src="/img/icons/dollar-grey.svg" class="icon_dollar_sec">
                        </span>
                    </div>
                    <div class="info_sec">
                        <img src="/img/icons/location-dark.svg" alt="" class="icon_sec">
                        <span class="txt_sec">{{company.city}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{else}}
    <h1>No data found!</h1>
{{/each}}