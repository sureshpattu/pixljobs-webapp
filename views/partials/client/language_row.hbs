<div class="row js_language_row">
    <div class="col-md-6">
        <div class="form-group pixl_form_group">
            <label class="control-label">Language</label>
            <div class="box_sec">
                <div class="gl_search_box">
                    <input type="text" class="form-control search_input search_enabled js_search_language"
                           placeholder="Search Language"
                           value="{{language.name}}"
                           data-tid="{{language.id}}"
                           autocomplete="off">
                    <span class="fa fa-search icon_sec search_enabled"></span>
                    <div class="gl_search_dropdown_list js_language_search_dropdown_list search_enabled hide"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group pixl_form_group">
            <label class="control-label">Skill Level</label>
            <div class="box_sec">
                <select class="form-control js_language_level"
                        required>
                    <option value="Basic"
                        {{#ifCond level '===' 'Basic'}}
                            selected
                        {{/ifCond}}>
                        Basic
                    </option>
                    <option value="Proficient"
                        {{#ifCond level '===' 'Proficient'}}
                            selected
                        {{/ifCond}}>
                        Proficient
                    </option>
                    <option value="Expert"
                        {{#ifCond level '===' 'Expert'}}
                            selected
                        {{/ifCond}}>
                        Expert
                    </option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <a class="btn btn_red remove_btn js_remove_language">Remove</a>
    </div>
</div>