<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pixlcoders</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    {{>header_assets select2=true}}
</head>
<body class="login_pg signup_pg">
{{>header}}
<section class="common_main_sec">
    {{>common_hero_sec}}
    <div class="cont_sec">
        {{>common_hero_sec}}
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="login_form_sec">
                        <div class="signup_wrap">
                            <div class="row">
                                <div class="col-xs-4 col-sm-6 col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <div class="signup_title_wrap">
                                            <div class="title">Resetâ€¨</div>
                                            <div class="sub_title">Password</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form id="resetPasswordForm">
                                <div class="form-group pixl_form_group">
                                    <label class="control-label">New Password</label>
                                    <div class="box_sec">
                                        <input type="password" class="form-control required js_new_passwd"
                                               placeholder="Enter Password" autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group pixl_form_group">
                                    <label class="control-label">Confirm Password</label>
                                    <div class="box_sec">
                                        <input type="password" class="form-control required js_confirm_passwd"
                                               placeholder="Confirm Password" autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-7">
                                            <input type="hidden" class="js_user_id" value="{{user_id}}">
                                            <button type="submit" class="btn btn_big btn_blue">RESET</button>
                                        </div>
                                        <div class="col-md-5">
                                            <button type="button" class="btn btn_big btn_preview"
                                                    onclick="document.location.href='/login';">
                                                GO BACK TO LOGIN
                                            </button>
                                        </div>
                                        <div class="js_server_error hide">
                                            <div class="err_msg js_server_error_msg"></div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{>footer_assets}}
{{>footer swiper=true select2=true cropper=true}}
</body>
<script type="application/javascript">
    $(function() {
        LoginHandler.initAppResetPwd();
    });
</script>
</html>
