<!DOCTYPE html>
<html lang="en">
<head>
    <title>Search</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{>header_assets swiper=true  select2=true}}
</head>
<body class="postjob_company">
{{>header}}
<section class="common_main_sec">
    <section class="common_hero_sec">
        <div class="container">

        </div>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="common_form_sec">
                    <section class="hero_sec">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">
                                <form class="form_sec">
                                    <div class="title_wrap">
                                        <div class="title text-center">Post job</div>
                                        <div class="sub_title text-center">About Company (3/3)</div>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-success" role="progress-bar" aria-valuenow="100"
                                             aria-valuemin="0" aria-valuemax="100" style="width:100%">
                                            <span class="sr-only">70% Complete</span>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">URL to your offer</label>
                                        <div class="box_sec">
                                            <input type="email" class="form-control" placeholder="Paste here">
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Company Name</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control" placeholder="Type here">
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Company Logo</label>
                                        <div class="box_sec">
                                            <input type="password" class="form-control"
                                                   placeholder="Drag & drop Image or Upload file">
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Industry <span class="fade_txt">(Optional)</span></label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control" placeholder="Choose one">
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Company Size <span
                                                class="fade_txt">(No. of employees)</span></label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control  " placeholder="0-25">
                                            <div class="icon_wrap">
                                                <span class="fa fa-angle-down icon_sec"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">About company <span class="fade_txt">(Optional)</span></label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control" placeholder="Type here">
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Benefits</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control" placeholder=" Medical Cover, Free food, etc">
                                            <div class="icon_wrap">
                                                <span class="fa fa-plus icon_sec"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Email for candidates</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control" placeholder=" careers@pixlcoders.com">
                                        </div>
                                    </div>
                                    <div class="cta_wrap">
                                        <button class="white_btn"><span class="fa fa-arrow-left"></span> return</button>
                                        <button class="blue_btn">proceed <span class="fa fa-arrow-right"></span></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
{{>footer swiper=true select2=true}}
</body>
<script type="application/javascript">
    $(function() {

    });
</script>
</html>
