<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pixlcoders</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    {{>header_assets select2=true}}
</head>
<body class="view_user_profile_pg med_content_pg">
<div class="hero_sec">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
                <form class="" id="jsSignUpForm">
                    <br/>
                    <br/>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control js_name required" placeholder="Enter full name">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control js_email required" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="text" class="form-control js_password required" placeholder="Enter password">
                    </div>
                    <div class="form-group">
                        <label>Mobile</label>
                        <input type="text" class="form-control js_mobile" placeholder="Enter mobile">
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <select class="form-control required js_gender js_select2">
                            <option value="">select</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <br/>
                    <div class="form-group">
                        <button type="submit" class="submit_btn btn btn-primary btn-lg btn-block">REGISTER</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{>footer_assets}}
</body>
<script type="application/javascript">
    $(function() {
        RegistrationHandler.init();
    });
</script>
</html>
