<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pixlcoders</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{>header_assets swiper=true  select2=true ranger=true}}
</head>
<body class="postjob_work">
{{>header}}
<section class="common_main_sec">
    {{>common_hero_sec}}
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="common_form_sec">
                    <section class="hero_sec">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <form class="form_sec" id="jsJobForm">
                                    <div class="title_wrap text-center">
                                        <div class="title">Post job</div>
                                        <div class="sub_title">About Work (1/3)</div>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-success" role="progress-bar"
                                             aria-valuenow="37" aria-valuemin="0" aria-valuemax="100" style="width:37%">
                                            <span class="sr-only">37% Complete</span>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Title</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control required js_title"
                                                   placeholder="Eg: Frontend Developer, UI Designer..." value="{{work_data.name}}">
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Location</label>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="box_sec radio_box">
                                                    <div class="form-control radio">
                                                        <input id="locationType1"
                                                               name="locationType"
                                                               type="radio"
                                                               value="office"
                                                               checked>
                                                        <label for="locationType1" class="radio-label">On Site</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="box_sec radio_box">
                                                    <div class="form-control radio">
                                                        <input id="locationType2"
                                                               name="locationType"
                                                               value="remote"
                                                               type="radio">
                                                        <label for="locationType2" class="radio-label">Remote</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Category</label>
                                        <div class="box_sec">
                                            <select class="form-control js_select2 js_category" required="required">
                                                <option value="0">Select Job Category</option>
                                                {{#each categories}}
                                                    {{#ifCond ../work_data.qa_job_categories.0.category.id '===' this.id}}
                                                        <option value="{{this.id}}" selected>{{this.name}}</option>
                                                    {{else}}
                                                        <option value="{{this.id}}">{{this.name}}</option>
                                                    {{/ifCond}}
                                                {{/each}}
                                            </select>
                                            <img src="/img/icons/arrow-down-dark.svg" alt="" class="arrow_down">
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Type</label>
                                        <div class="box_sec">
                                            <select class="form-control js_select2 js_job_type" required>
                                                <option value="{{work_data.job_type}}">{{work_data.job_type}}</option>
                                                <option value="">select</option>
                                                <option value="FullTime">Full Time</option>
                                                <option value="PartTime">Part Time</option>
                                                <option value="Internship">Internship</option>
                                                <option value="Contract">Contract</option>
                                                <option value="Volunteer">Volunteer</option>
                                                <option value="Temporary">Temporary</option>
                                            </select>
                                            <img src="/img/icons/arrow-down-dark.svg" alt="" class="arrow_down">
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Salary - Annual INR</label>
                                        <div class="box_sec">
                                            <div class="wrapper" style="padding:20px;">
                                                <div class="range-slider">
                                                    <input type="text" class="js-range-slider" value=""/>
                                                </div>
                                                <div class="extra-controls form-inline">
                                                    <div class="form-group">
                                                        <input type="hidden" class="js-input-from form-control"
                                                               value="0"/>
                                                        <input type="hidden" class="js-input-to form-control"
                                                               value="0"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="cta_wrap text-center">
                                        <button class="btn btn_big btn_blue">PROCEED
                                            <img src="/img/icons/full-arrow-blue.svg" alt="" class="right_icon">
                                        </button>
                                        <input type="hidden" value="{{recruiter_id}}" class="js_recruiter_id">
                                        <input type="hidden" class="js_job_id" value="{{job_id}}">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
{{>footer swiper=true select2=true ranger=true}}
</body>
<script type="text/javascript">
    $(function() {
        PostJobEditHandler.init();
    });
</script>
</html>
