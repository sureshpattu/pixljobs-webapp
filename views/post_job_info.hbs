<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pixlcoders - About Info</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{>header_assets swiper=true  select2=true}}
</head>
<body class="postjob_info">
{{>header}}
<section class="common_main_sec">
    {{>common_hero_sec}}
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="common_form_sec">
                    <section class="hero_sec">
                        <div class="title_wrap">
                            <div class="title text-center">Post job</div>
                            <div class="sub_title text-center">â€¨Additional Info (2/3)</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar progress-bar-success" role="progress-bar" aria-valuenow="51"
                                 aria-valuemin="0" aria-valuemax="100" style="width:51%">
                                <span class="sr-only">51% Complete</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <form class="form_sec" id="jsJobInfoForm">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group pixl_form_group">
                                                <label class="control-label">Work Week <span
                                                        class="fade_txt">(hours)</span></label>
                                                <div class="box_sec">
                                                    <input type="text" class="form-control js_work_week required"
                                                           placeholder="Type in Numbers Eg: 40 Hrs"
                                                           value="{{job_data.work_week}}" pattern="^[0-9]*$"
                                                           onkeyup="isNumber(this)">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group pixl_form_group">
                                                <label class="control-label">Holidays <span
                                                        class="fade_txt">(days - per year)</span></label>
                                                <div class="box_sec">
                                                    <input type="text" class="form-control js_holidays required"
                                                           placeholder="Type in Numbers Eg: 20 days"
                                                           value="{{job_data.holidays}}" onkeyup="isNumber(this)">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-xs-6">
                                            <div class="form-group pixl_form_group">
                                                <label class="control-label">Minimum Education Level</label>
                                                <div class="box_sec">
                                                    <select class="form-control js_edu_level js_select2">
                                                        <option value="Secondary"
                                                            {{#ifCond job_data.education_level '===' 'Secondary'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            Secondary(10th Pass)
                                                        </option>
                                                        <option value="Higher Secondary"
                                                            {{#ifCond job_data.education_level '===' 'Secondary'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            Higher Secondary(12th Pass)
                                                        </option>
                                                        <option value="Diploma">
                                                            {{#ifCond job_data.education_level '===' 'Diploma'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            Diploma
                                                        </option>
                                                        <option value="Bachelors"
                                                            {{#ifCond job_data.education_level '===' 'Bachelors'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            Bachelor's
                                                        </option>
                                                        <option value="Masters"
                                                            {{#ifCond job_data.education_level '===' 'Masters'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            Master's
                                                        </option>
                                                        <option value="Doctorate"
                                                            {{#ifCond job_data.education_level '===' 'Doctorate'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            Doctorate
                                                        </option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-xs-6">
                                            <div class="form-group pixl_form_group">
                                                <label class="control-label">Urgency Level</label>
                                                <div class="box_sec">
                                                    <select class="form-control js_urgent_status js_select2">
                                                        <option value="none">None</option>
                                                        <option value="days"
                                                            {{#ifCond job_data.urgent_status '===' 'days'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            2-3 days
                                                        </option>
                                                        <option value="week"
                                                            {{#ifCond job_data.urgent_status '===' 'week'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            In a week
                                                        </option>
                                                        <option value="weeks"
                                                            {{#ifCond job_data.urgent_status '===' 'weeks'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            Two Weeks
                                                        </option>
                                                        <option value="month"
                                                            {{#ifCond job_data.urgent_status '===' 'month'}}
                                                                selected
                                                            {{/ifCond}}>
                                                            In a month
                                                        </option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group pixl_form_group">
                                                <label class="control-label">Category</label>
                                                <div class="box_sec">
                                                    <select class="form-control js_select2 js_category"
                                                            required="required">
                                                        <option value="0">Select Job Category</option>
                                                        {{#each categories}}
                                                            {{#ifCond ../job_data.qa_job_categories.0.category.id '==='
                                                                      this.id}}
                                                                <option value="{{this.id}}"
                                                                        selected>{{this.name}}</option>
                                                            {{else}}
                                                                <option value="{{this.id}}">{{this.name}}</option>
                                                            {{/ifCond}}
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group pixl_form_group">
                                                <label class="control-label">Type</label>
                                                <div class="box_sec">
                                                    <select class="form-control js_select2 js_job_type" required>
                                                        <option value="{{job_data.job_type}}">{{job_data.job_type}}</option>
                                                        <option value="">select</option>
                                                        <option value="FullTime">Full Time</option>
                                                        <option value="PartTime">Part Time</option>
                                                        <option value="Internship">Internship</option>
                                                        <option value="Contract">Contract</option>
                                                        <option value="Volunteer">Volunteer</option>
                                                        <option value="Temporary">Temporary</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label demo">Technologies<span class="gl_input_text">separated by comma ( , )</span></label>
                                        <div class="box_sec">
                                            <select multiple="multiple"
                                                    class="form-control required js_technologies">
                                                {{#each technologies}}
                                                    {{#checkArrayOfObjectVal id ../job_data.qa_job_technologies}}
                                                        <option value="{{id}}" selected>{{name}}</option>
                                                    {{else}}
                                                        <option value="{{id}}">{{name}}</option>
                                                    {{/checkArrayOfObjectVal}}
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="cta_wrap">
                                        <a class="btn btn_big second_btn" href="/post-job-edit/{{job_id}}">
                                            RETURN
                                            <img src="/img/icons/full-arrow-grey.svg" alt="" class="left_icon">
                                        </a>
                                        <button class="btn btn_big btn_blue">PROCEED
                                            <img src="/img/icons/full-arrow-blue.svg" alt="" class="right_icon">
                                        </button>
                                        <input type="hidden" class="js_job_id" value="{{job_id}}">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
{{>footer swiper=true select2=true}}
</body>
<script type="application/javascript">
    $(function() {
        PostJobHandler.initWorkInfo();
    });

    var isNumber = function(box) {
        box.value = box.value.replace(/[^0-9]/g, '');
    };
</script>
</html>
