<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pixlcoders</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{>header_assets swiper=true  select2=true}}
</head>
<body class="postjob_company">
{{>header}}
<section class="common_main_sec">
    {{>common_hero_sec}}
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="common_form_sec">
                    <section class="hero_sec">
                        <div class="title_wrap">
                            <div class="title text-center">Post job</div>
                            <div class="sub_title text-center">About Company (3/3)</div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar progress-bar-success" role="progress-bar"
                                 aria-valuenow="100"
                                 aria-valuemin="0" aria-valuemax="100" style="width:100%">
                                <span class="sr-only">70% Complete</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                {{#each companies}}
                                    {{>client/company_form data=this industries=../industries benefits=../benefits}}
                                {{else}}
                                    {{>client/company_form}}
                                {{/each}}
                                <div class="cta_wrap">
                                    <a class="btn btn_big second_btn" href="/post-job/info/{{job_id}}">
                                        RETURN
                                        <img src="/img/icons/full-arrow-grey.svg" alt="" class="left_icon">
                                    </a>
                                    <button class="btn btn_big btn_blue jsSubmitCompanyFormBtn">
                                        PROCEED
                                        <img src="/img/icons/full-arrow-blue.svg" alt="" class="right_icon">
                                    </button>
                                    <input type="hidden" class="js_job_id" value="{{job_id}}">
                                    <input type="hidden" class="js_company_id" value="{{companies.0.id}}">
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
{{>footer swiper=true select2=true}}
</body>
<script type="application/javascript">
    $(function() {
        PostJobHandler.initCompany()
    });
</script>
</html>
