<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pixlcoders Sign-Up-Applicant</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{>header_assets swiper=true  select2=true cropper=true}}
</head>
<body class="signup_pg">
{{>header}}
<section class="common_main_sec">
    {{>common_hero_sec}}
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="common_form_sec">
                    <div class="signup_wrap">
                        <form class="" id="jsSignUpApplicantForm">
                            <div class="row">
                                <div class="col-xs-4 col-sm-6 col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <div class="signup_title_wrap">
                                            <div class="title">Signup toâ€¨</div>
                                            <div class="sub_title">Get started!</div>
                                        </div>
                                    </div>
                                    <div class="role_wrap">
                                        <div class="form-group pixl_form_group">
                                            <label for="" class="control-label">Select a role</label>
                                            <div class="role_row">
                                                <a class="btn signup-applicant role active" href="/sign-up/applicant">
                                                    <img src="/img/icons/applicant.svg" alt="" class="role_icon">
                                                    Applicant</a>
                                                <a class="btn signup-recruit role " href="/sign-up/recruiter">
                                                    <img src="/img/icons/recruiter.svg" alt="" class="role_icon">
                                                    Recruiter</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-6 col-xs-12">
                                    <div class="upload_photo_wrap js_profile_img_wrap">
                                        <div class="pf_img_wrap">
                                            <img src="/img/user_icon.svg" class="img_sec js_img_pre_holder hide">
                                        </div>
                                        <div class="icon_wrap js_profile_img_txt">
                                            <div class="upload_pic"></div>
                                            <div class="upload_txt">Upload Profile</div>
                                            <div class="upload_txt">photo</div>
                                        </div>
                                        <input type="file" class="js_input_profile_file" accept="image/*">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Full Name</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control js_name required"
                                                   autocomplete="nope"
                                                   placeholder="Enter your first name and last name">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Experience</label>
                                        <div class="row">
                                            <div class="col-md-6 col-xs-6">
                                                <div class="box_sec">
                                                    <select id="selectExpYear"
                                                            class="form-control js_select2 js_exp_year">
                                                        <option value="0">0 Years</option>
                                                        <option value="1">1 Years</option>
                                                        <option value="2">2 Years</option>
                                                        <option value="3">3 Years</option>
                                                        <option value="4">4 Years</option>
                                                        <option value="5">5 Years</option>
                                                        <option value="6">6 Years</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-xs-6">
                                                <div class="box_sec">
                                                    <select id="selectExpMonth"
                                                            class="form-control js_exp_month js_select2">
                                                        <option value="0">0 Months</option>
                                                        <option value="1">1 Months</option>
                                                        <option value="2">2 Months</option>
                                                        <option value="3">3 Months</option>
                                                        <option value="4">4 Months</option>
                                                        <option value="5">5 Months</option>
                                                        <option value="6">6 Months</option>
                                                        <option value="7">7 Months</option>
                                                        <option value="8">8 Months</option>
                                                        <option value="9">9 Months</option>
                                                        <option value="10">10 Months</option>
                                                        <option value="11">11 Months</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 js_fresh_detail_sec">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Qualification</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control js_qualification required"
                                                   autocomplete="nope" placeholder="Highest academic qualification">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 js_exp_detail_sec hide">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Designation</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control js_designation"
                                                   autocomplete="nope" placeholder="Mention about your role">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 js_exp_detail_sec hide">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Company Name</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control js_company"
                                                   autocomplete="nope" placeholder="Enter your company's name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 js_exp_detail_sec hide">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Current Annual Salary</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control js_cur_salary"
                                                   autocomplete="nope" placeholder="Enter Amt in No.s only">
                                            <span class="inr_txt">INR</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Expected Annual Salary</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control js_anual_salary"
                                                   autocomplete="nope" placeholder="Enter Amt in No.s only">
                                            <span class="inr_txt">INR</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 js_fresh_detail_sec">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Institution</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control js_institution"
                                                   autocomplete="nope"
                                                   placeholder="Last academic institution attended">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 js_fresh_detail_sec">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Institution City</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control js_institution_city"
                                                   autocomplete="nope"
                                                   placeholder="Institution City">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Current Living City</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control js_current_city"
                                                   autocomplete="nope"
                                                   placeholder="Current City">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label"> </label>
                                        <div class="check_box_wrap">
                                            <label class="check_box">
                                                <input type="checkbox" class="js_relocation_checkbox">
                                                <span class="checkmark"></span>
                                                Relocate
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Gender</label>
                                        <div class="box_sec">
                                            <select class="form-control js_gender required js_select2">
                                                <option value="male">Male</option>
                                                <option value="female">Female</option>
                                                <option value="other">Others</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Contact No.</label><a class="non_verify_link">VERIFY</a>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="box_sec">
                                                    <select class="form-control js_mobile_code required js_select2">
                                                        <option value="">Select</option>
                                                        {{#each country_code}}
                                                            <option value="{{code}}">{{name}} {{code}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="box_sec">
                                                    <input type="text" class="form-control required js_mobile"
                                                           autocomplete="nope" placeholder="Your 10 digit mobile No.">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Email ID</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control required js_email"
                                                   autocomplete="nope" placeholder="Your current Email ID">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Password</label>
                                        <div class="box_sec">
                                            <input type="password" class="form-control required js_password"
                                                   autocomplete="nope" placeholder="Your password">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Upload Resume</label>
                                        {{>client/doc_upload data=null}}
                                    </div>
                                </div>
                            </div>
                            <div class="cta_wrap">
                                <button class="btn btn_big btn_blue" type="submit">
                                    PROCEED
                                    <img src="/img/icons/full-arrow-blue.svg" alt="" class="right_icon">
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--{{>popup/profile_photo_upload}}-->
{{>footer swiper=true select2=true cropper=true}}
</body>
<script type="application/javascript">
    $(function() {
        ApplicantSignUpHandler.init();
    });
</script>
</html>
