<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pixlcoders</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    {{>header_assets select2=true}}
</head>
<body class="login_pg signup_pg">
{{>header}}
<section class="common_main_sec">
    {{>common_hero_sec}}
    <div class="cont_sec">
        <section class="common_hero_sec">
            <div class="container">

            </div>
        </section>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="login_form_sec">
                        <div class="signup_wrap">
                            <div class="row">
                                <div class="col-xs-4 col-sm-6 col-md-6">
                                    <div class="form-group pixl_form_group">
                                        <div class="signup_title_wrap">
                                            <div class="title">Forgotâ€¨</div>
                                            <div class="sub_title">Password?</div>
                                        </div>
                                    </div>
                                    <div class="role_wrap">
                                        <div class="form-group pixl_form_group">
                                            <label for="" class="control-label">Select a role</label>
                                            <div class="role_row">
                                                <a class="btn role active" type="submit"><i
                                                        class="fa fa-user"
                                                        aria-hidden="true"></i>Applicant</a>
                                                <a class="btn signup-recruit role " type="submit"
                                                ><i class="fa fa-user"
                                                    aria-hidden="true"></i>Recruiter</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p class="text-muted">Enter your email address and your password will be reset and
                                emailed
                                to
                                you.</p>
                            <form class="" id="jsRecruiterLoginForm">
                                <div class="form-group pixl_form_group">
                                    <label class="control-label">Email</label>
                                    <div class="box_sec">
                                        <input type="text" class="form-control required js_email"
                                               placeholder="Your email address" autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <button type="submit" class="btn btn_big btn_blue">LOGIN</button>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="button" class="btn btn_big btn_preview"
                                                    onclick="document.location.href='/login';">GO BACK TO LOGIN.
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{>footer_assets}}
{{>footer swiper=true select2=true cropper=true}}
</body>
<script type="application/javascript">
    $(function() {
        LoginHandler.initRecruiterLogin();
    });
</script>
</html>
