<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pixlcoders</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    {{>header_assets select2=true}}
</head>
<body class="login_pg signup_pg">
{{>header}}
<div class="cont_sec">
    <section class="common_hero_sec">
        <div class="container">

        </div>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="login_form_sec">
                    <div class="signup_wrap">
                        <form id="forgotPasswordForm">
                            <h1>Forgot Password</h1>
                            <p class="text-muted">Enter your email address and your password will be reset and
                                emailed
                                to
                                you.</p>

                            <div class="form-group pixl_form_group">
                                <label class="control-label">Email address</label>
                                <div class="box_sec">
                                    <input type="email" class="form-control input_new js_email"
                                           placeholder="Enter email"
                                           autocomplete="off">
                                </div>
                            </div>
                            <div class="form-footer">
                                <button class="btn btn_big btn_blue cta_update">Submit</button>
                            </div>
                        </form>
                        <div class="text-center text-muted">
                            <a href="/login" class="cta_link cta_txt">Go back to Login.</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{>footer_assets}}
{{>footer swiper=true select2=true cropper=true}}
</body>
