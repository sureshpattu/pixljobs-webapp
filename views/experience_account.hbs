<!DOCTYPE html>
<html lang="en">
<head>
    <title>Account Experience</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    {{>header_assets select2=true}}
</head>
<body class="profile_pg">
{{>header}}
<section class="common_main_sec">
    {{>common_hero_sec}}
    <div class="container">
        <div class="common_tab_links_wrap">
            <ul>
                <li><a class="cta_link active" href="#">Profile</a></li>
                <li><a class="cta_link" href="#">Applications</a></li>
                <li><a class="cta_link" href="#">Preferences</a></li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="common_form_sec">
                    <div class="form_wrap">
                        <div class="name_info_sec">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="profile_img_wrap">
                                        <img src="/img/user_icon.svg" class="img_sec">
                                        <div class="icon_wrap">
                                            <span class="fa fa-pencil"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="name_txt">Sunil Suresh Patil</div>
                                    <div class="qualification_txt">Full Stack Developer, 5yrs Exp.</div>
                                </div>
                            </div>
                        </div>
                        <div class="detail_sec">
                            <form class="" id="jsLoginForm" action="/search">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group pixl_form_group">
                                            <label class="control-label">Full Name</label>
                                            <div class="box_sec">
                                                <input type="text" class="form-control"
                                                       placeholder="Sunil Suresh Patil">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group pixl_form_group">
                                            <label class="control-label">Experience</label>
                                            <div class="row">
                                                <div class="col-md-6 col-xs-6">
                                                    <input type="text" class="form-control "
                                                           placeholder="0 years">
                                                </div>
                                                <div class="col-md-6 col-xs-6">
                                                    <input type="text" class="form-control "
                                                           placeholder="0 months">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group pixl_form_group">
                                            <label class="control-label">Contact No.</label><span class="verify_txt">Verify</span>
                                            <div class="box_sec">
                                                <input type="text" class="form-control" placeholder="9878655672">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group pixl_form_group">
                                            <label class="control-label">Email ID</label>
                                            <div class="verified_wrap">
                                                <div class="verified_email">
                                                    <img src="/img/icons/tick-green.svg" alt="">
                                                </div>
                                                <span class="verified_txt">Verified</span>
                                            </div>
                                            <div class="box_sec">
                                                <input type="text" class="form-control"
                                                       placeholder="sunil.patil88@gmail.com">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group pixl_form_group ">
                                            <label class="control-label">Upload Resume <span class="updated_txt">updated 2 days ago</span></label>
                                            <div class="box_sec upload_sec">
                                                <img src="/img/icons/upload-doc.svg" alt="" class="icon_sec">
                                                <span>Drag & drop Image or </span>
                                                <a class="upload_txt">Upload file</a>
                                                <input type="file" class="input_file">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="cta_wrap">
                                    <button class="btn btn_big btn_preview">PREVIEW</button>
                                    <button class="btn btn_big btn_blue" type="submit">
                                        SAVE
                                        <img src="/img/icons/tick.svg" alt="" class="tick_icon">
                                    </button>
                                    <input type="hidden" class="js_data_id" value="{{data.id}}">
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
{{>footer}}
</body>
<script type="application/javascript">
    $(function() {

    });
</script>
</html>
