<!DOCTYPE html>
<html lang="en">
<head>
    <title>Search</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{>header_assets swiper=true  select2=true}}
</head>
<body class="postjob_work">
{{>header}}
<section class="common_main_sec">
    <section class="common_hero_sec">
        <div class="container">

        </div>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="common_form_sec">
                    <section class="hero_sec">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">
                                <form class="form_sec">
                                    <div class="title_wrap">
                                        <div class="title">Post job</div>
                                        <div class="sub_title">About Work (1/3)</div>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-success" role="progress-bar" aria-valuenow="37"
                                             aria-valuemin="0" aria-valuemax="100" style="width:37%">
                                            <span class="sr-only">37% Complete</span>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Title</label>
                                        <div class="box_sec">
                                            <input type="email" class="form-control" placeholder="Eg: Frontend Developer, Ui Designer...">
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Location</label>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="box_sec">
                                                    <div class="form-control radio_link">
                                                        <input type="radio" name="optradio" checked><span class="radio_txt">Remote</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="box_sec">
                                                    <div class="form-control radio_link">
                                                        <input type="radio" name="optradio" checked><span class="radio_txt">On Site</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Category</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control" placeholder="Select Job Category">
                                            <div class="icon_wrap">
                                                <span class="fa fa-angle-down icon_sec"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Type</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control" placeholder="Part Time">
                                            <div class="icon_wrap">
                                                <span class="fa fa-angle-down icon_sec"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group pixl_form_group">
                                        <label class="control-label">Salary - Annual INR</label>
                                        <div class="box_sec">
                                            <input type="text" class="form-control" placeholder="Select Range">
                                            <div class="icon_wrap">
                                                <span class="fa fa-angle-down icon_sec"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="blue_btn">proceed <span class="fa fa-arrow-right"></span></button>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>
{{>footer swiper=true select2=true}}
</body>
<script type="application/javascript">
    $(function() {

    });
</script>
</html>
